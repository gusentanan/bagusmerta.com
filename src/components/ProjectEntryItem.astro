---
import type { ProjectEntry } from "utils/content";
import { formatDate } from "utils/time";

export type Props = ProjectEntry;

const props = Astro.props;
---

<article>
  <div>
    <div>
      <h3>{props.data.title}</h3>
      <time>{formatDate(props.data.createdDate)}</time>
      <p class="tags">
      {props.data.tags.map((tag) => (<span> {tag}, </span> ))}
      </p>
      <p>{props.data.description}</p>
    </div>
    <a href={(props.data.link)} class="link">Source â†’</a>
  </div>
  <picture>
    <img 
      src={props.data.image.src}
      alt="project image"
      width="400"
      height="220"
    />
  </picture>
</article>  

<style>
  article {
    display: flex;
    justify-content: space-between; 
    align-items: center;
    padding: 1rem;
  }
  h3 {
    margin-bottom: 0.25rem;
  }
  a {
    color: var(--color-text) !important;
    text-decoration: none;
    font-weight: 800;
  }
  time {
    font-weight: 200;
    font-size: 0.8rem;
  }
  p {
    margin-top: 1rem;
  }
  img {
    border-radius: 2%;
  }
  .tags {
    font-weight: 200;
    font-size: medium;
  }
  @media only screen and (max-width: 600px){
    article {
      display: block;
      grid-column: 1 / 2;
    }
    img {
      margin-top: 1rem;
      width:100%;
      height: auto;
    }
  }
</style>
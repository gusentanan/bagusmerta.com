---
import type { ProjectEntry } from "utils/content";
import { formatDate } from "utils/time";
import { Image } from "astro:assets";

export type Props = ProjectEntry;

const props = Astro.props;
---

<article>
  <div>
    <div>
      <h3>{props.data.title}</h3>
      <time>{formatDate(props.data.createdDate)}</time>
      <p class="tags">
      {props.data.tags.map((tag) => (<span class="inverted"> {tag}  </span> ))}
      </p>
      <p>{props.data.description}</p>
    </div>
    <a href={(props.data.link)} target="_blank" class="link">Source â†’</a>
  </div>
  <picture>
    <Image 
      class="project__image"
      src={props.data.image}
      alt="project image"
    />
  </picture>
</article>  

<style>
  article {
    display: flex;
    justify-content: space-between; 
    align-items: center;
    padding: 1rem;
  }
  h3 {
    margin-bottom: 0.25rem;
  }
  a {
    color: var(--color-text) !important;
    text-decoration: none;
    font-weight: 800;
  }
  time {
    font-weight: 200;
    font-size: 0.8rem;
  }
  p {
    margin-top: 1rem;
  }

  .project__image {
    position: relative;
    top: 0;
    transition: top ease 0.5s;
    border-radius: 14px;
    max-width: 400px;
    max-height: 220px;
  }

  .project__image:hover {
    top: -6px;
  }
  
  .tags {
    font-weight: 200;
    font-size: medium;
    line-height: 32px;
  }

  .inverted {
    margin-right: 4px;
  }

  @media only screen and (max-width: 600px){
    article {
      display: block;
      grid-column: 1 / 2;
    }
    .project__image {
      margin-top: 1rem;
      width:100%;
      height: auto;
    }
  }
</style>
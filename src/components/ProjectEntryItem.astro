---
import type { ProjectEntry } from "utils/content";
import { Image } from "astro:assets";
import TechIcons from "./TechIcons.astro";

export type Props = ProjectEntry;

const props = Astro.props;

---

<li class:list={[
    'project-card rounded-md md:w-full border',
    'scale-100 hover:scale-[1.02] active:scale-[0.97] motion-safe:transform-gpu',
    'transition duration-100',
    'motion-reduce:hover:scale-100'
]}>
  <a href={(props.data.link)} class:list={[
    'flex h-full flex-col items-start rounded-md p-4 focus:outline-none focus-visible:ring focus-visible:ring-primary-300',
    'cursor-newtab',
  ]} target='_blank'>
    <h4 class="text-2xl"> {props.data.title}</h4>
    <p class='m-0 text-sm text-gray-600'>
        {props.data.description}
    </p>
      <TechIcons {...props}/>
      <picture>
        <Image 
            class='py-4 rounded'
            src={props.data.image}
            decoding='async'
            loading='lazy'
            alt='project image'
          />
      </picture> 
    <p class='m-0 animated-underline inline-block font-normal'>
        Sources â†’
    </p>
  </a>
</li>



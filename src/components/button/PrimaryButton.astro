---
export interface Props {
  href: string;
  text: string;
  glowing?: boolean; // Add a prop to differentiate between glowing and non-glowing buttons
}

const { href = '/blog', text = 'See more articles â†’', glowing = false } = Astro.props;
---

<a href={href}>
  <button class={`group relative grid overflow-hidden rounded-full ${glowing ? 'shadow-[0_1000px_0_0_hsl(0_0%_20%)_inset] transition-colors duration-200' : ''}`}>
    <span>
      <span class={`spark mask-gradient absolute ${glowing ? 'inset-0 h-[100%] w-[100%] animate-flip overflow-hidden rounded-full [mask:linear-gradient(white,_transparent_50%)] before:absolute before:aspect-square before:w-[200%] before:rotate-[-90deg] before:animate-rotate before:bg-[conic-gradient(from_0deg,transparent_0_340deg,white_360deg)] before:content-[""] before:[inset:0_auto_auto_50%] before:[translate:-50%_-15%]' : ''}`} />
    </span>
    <span class="backdrop absolute inset-[1px] rounded-full duration-200 bg-background group-hover:bg-primary-foreground" />
    <span class="z-10 py-0.5 text-sm text-neutral-100">{text}</span>
  </button>
</a>

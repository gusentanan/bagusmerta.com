---
import type { BlogEntry } from "utils/content";
import { formatDate } from "utils/time";
import { getBlogPathName } from "utils/url";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components"

export type Props = BlogEntry;

const props = Astro.props;
---

<article>
  <li class="custom-list-item">
    <a class="custom-link" href={getBlogPathName(props)}>
        <div class="image-container">
          <Image 
            class="rounded-t-md"
            src={props.data.banner} 
            alt="blog banner"             
           />
  
        </div>
        <div class="content-container">
            <h3 class="post-title">{props.data.title}</h3>
            <div class="metadata">
                <div class="metadata-item">
                    <Icon name="ri:alarm-line"/>
                    <strong>{props.data.readCount}</strong>
                </div>
                <div class="metadata-item">
                  <Icon name="ri:calendar-2-fill"/>
                  <strong>{formatDate(props.data.date)}</strong>
              </div>
            </div>
            <p class="description">{props.data.description}</p>
        </div>
    </a>
</li>
</article>

<style>
  .custom-list-item {
        height: 100%;
        width: 100%;
        border: 1px solid #ccc;
        background-color: #fff;
        border-radius: 0.375rem;
        transition: transform 0.1s;
    }

    .custom-list-item:hover {
        transform: scale(1.02);
    }

    .custom-list-item:active {
        transform: scale(0.97);
    }

    .custom-link {
        display: block;
        height: 100%;
        border-radius: 0.375rem;
        outline: none;
        transition: box-shadow 0.3s;
    }

    .custom-link:focus-visible {
        box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
    }

    .image-container {
        position: relative;
    }

    .rounded-t-md {
        border-top-left-radius: 0.375rem;
        border-top-right-radius: 0.375rem;
        pointer-events: none;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .tags-container {
        position: absolute;
        bottom: 0;
        width: 100%;
        padding: 0.5rem;
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-end;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: #000;
    }

    .tag {
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 0.25rem;
        padding: 0.25rem 0.5rem;
        cursor: default;
    }

    .content-container {
        margin: 1rem;
    }

    .metadata {
        margin-top: 0.5rem;
        display: flex;
        gap: 1rem;
        font-size: 0.875rem;
        font-weight: normal;
        color: #6d7785;
    }

    .metadata-item {
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    [data-icon] {
        font-size: 1.5em;
    }

    .date {
        font-size: 0.875rem;
        color: #4b5563;
    }

    .description {
        font-size: 1rem;
        color: #4b5563;
    }
</style>
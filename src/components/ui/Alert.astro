---
import { Icon } from "astro-icon/components";

type AlertVariant = 'default' | 'destructive' | 'warning' | 'success';

interface AlertProps {
  title?: string;
  description?: string;
  icons?: string;
  variant?: AlertVariant;
}

const variantStyles = {
  default: "text-foreground bg-zinc",
  destructive: "text-red-800 bg-red-50",
  warning: "text-yellow-800 bg-yellow-50",
  success: "text-green-800 bg-green-50"
} as const;

const { 
  title = "Alert Title", 
  description = "This is a description of the alert.", 
  variant = "default", 
  icons = 'ri:earth-line' 
} = Astro.props;

const baseClasses = "flex items-start p-4 mb-4 rounded-md";
const variantClasses = variantStyles[variant];
---
<div class={`${baseClasses} ${variantClasses} gap-8 border border-gray-800`} role="alert">
  <div class="p-2 rounded-lg bg-gray-800">
    <Icon name={icons} class="h-8 w-8 text-gray-400"/>
  </div>
  <div>
    <h3 class="text-lg font-semibold">{title}</h3>
    <div class="mt-1 text-sm">{description}</div>
  </div>
</div>

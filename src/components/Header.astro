---
import { getPathNameWithoutLocale } from "utils/url";

type NavLink = {
  href: string;
  label: string;
};

const LINKS: NavLink[] = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/projects", label: "Project" },
  { href: "/blog", label: "Blog" },
  { href: "/experience", label: "Experience" },
];

// omit the locale prefix if exists
const pathname = getPathNameWithoutLocale(Astro.request.url);
---

<header>
  <nav>
    <a href="/">
      <picture>
        <img
          src="/images/logo.svg"
          alt="bagusmerta.dev logo"
          width="122"
          height="122"
        />
      </picture>
    </a>
    <div>
      {
        LINKS.map(({ href, label }) => (
          <a href={href} aria-current={href === pathname ? "page" : undefined}
          class="link">
            {label}
          </a>
        ))
      }
    </div>
  </nav>
</header>

<style>
  header {
    padding-top: 1rem;
  }
  h1 {
    margin-bottom: 0;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
  }
  nav > div {
    display: flex;
    gap: 0.75rem;
  }
  img {
    width: 142px;
    height: 82px;
    object-fit: contain;
  }
  
  a[aria-current="page"] {
    font-weight: bold;
  }

  @media (max-width: 600px){
    nav {
      display: flex;
      flex-direction: column;
      align-items: start;
    }
  }

</style>
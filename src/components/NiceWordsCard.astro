---
import type { NicewordsEntry } from "utils/content";
import { Image } from "astro:assets";

export type Props = NicewordsEntry;

const props = Astro.props;
---

<li class:list={[
    'p-2 w-full rounded-lg border border-gray-900',
    'bg-gradient-to-br from-[var(--card)]',
    'scale-500 hover:scale-[1.02] active:scale-[0.97] motion-safe:transform-gpu',
    'transition duration-500',
    'motion-reduce:hover:scale-500',
    'animate-shadow',
    'hover:border-[var(--card-hover-border)] hover:shadow-[0_0_12px_var(--card-hover)]',
  ]}>
    <div class="flex flex-col justify-between h-full p-6">
      <div>
        {props.data.words}  
      </div>

      <div class="flex items-center gap-4 mt-10">
        <Image
          class="rounded-full size-9"
          src={props.data.image}
          width=36
          height=36
          loading='lazy'
          alt='people kind words'
        />

        <div>
          <h5>{props.data.name}</h5>
          <h6 class="text-gray-500 text-sm">{props.data.workplace}</h6>
        </div>
      </div>

      
    </div>
  </li>
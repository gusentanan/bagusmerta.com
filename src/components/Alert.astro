---
import { Icon } from "astro-icon/components";

interface AlertProps {
  title?: string;
  description?: string;
  icons?: string;
  variant?: 'default' | 'destructive';
}

const { title = "Alert Title", description = "This is a description of the alert.", variant = "default", icons = 'ri:earth-line' } = Astro.props;

const baseClasses = "flex items-start p-4 mb-4 rounded-md";
const variantClasses = variant === 'destructive'
  ? "text-red-800 bg-red-50"
  : "text-foreground bg-zinc";
---
<div class={`${baseClasses} ${variantClasses} gap-8 border border-gray-800`} role="alert">
<div class="p-2 rounded-lg bg-gray-800">
    <Icon name={icons} class="h-8 w-8 text-gray-400"/>
</div>
  <div>
    <h3 class="text-lg font-semibold">{title}</h3>
    <div class="mt-1 text-sm">{description}</div>
  </div>
</div>

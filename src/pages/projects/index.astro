---
import PostEntryItem from "@components/project/ProjectEntryItem.astro";
import { Spotlight } from "@components/Spotlight";
import BaseLayout from "@layouts/BaseLayout.astro";
import { getProjectCollection } from "utils/content";
import { getTitle } from "utils/title";
import Background from "@components/Background.astro";

const allProject = await getProjectCollection();
---

<BaseLayout title={getTitle('Projects')}>
  <Background>
    <main>
      <div class='layout py-32'>
        
        <div class="flex flex-col justify-center items-center">
          <h2 class='font-display text-5xl md:text-5xl'>
            The
            <span class="bg-gradient-to-br from-accent-blue/20 via-accent-blue/90 to-accent-blue/20 bg-clip-text text-transparent">
              Projects
            </span>
          </h2>
          <p class='px-12 md:px-32 py-2 md:py-6 text-center transition-colors bg-gradient-to-r from-neutral-300/[35%] via-neutral-300/90 to-neutral-300/[35%] bg-clip-text text-transparent'>
            Things I've created.
            Please note that some projects from my professional work cannot be shared due to confidentiality reasons. 
          </p>
        </div>
        <ul class='mt-6 px-6 grid gap-4 sm:grid-cols-2 xl:grid-cols-2'>
          {allProject.map((projects) => <PostEntryItem {...projects} />)}
        </ul>
      </div>
    </main>
  </Background>
</BaseLayout>

---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="404: Not Found">
  <main>
    <div>
      <h1>Page Not found.</h1>
      <p>Sorry, the page you were looking for is not found!</p>
      <a href="/" class="back">Go back to the homepage</a>
    </div>
  </main>
</BaseLayout>

<style>
  div {
    display: flex;
    height: 50vh;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1;
  }
  h1 {
    font-size: 2rem;
    margin-bottom: 0;
  }
  p {
    font-size: 1.5rem;
    margin-top: 0;
  }
  a {
    font-size: 1.5rem;
    margin-top: 1rem;
    color: var(--color-text);
    background: var(--color-primary);
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
  }
  .back {
  text-decoration: none; 
  position: relative;
  }

  .back::after {
  content: ''; 
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 3px; 
  background-color: #2c2c2c;
}

.back:hover::after {
  width: 100%;
  transition: all 0.5s ease;
}

</style>
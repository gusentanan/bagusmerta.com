---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="404: Not Found">
  <main>
    <div>
      <h1>Page Not found.</h1>
      <p>Sorry, the page you were looking for is not found!</p>
      <a href="/" class="link">Go back to the homepage</a>
    </div>
  </main>
</BaseLayout>

<style>
  div {
    display: flex;
    height: 50vh;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1;
  }
  h1 {
    font-size: 2rem;
    margin-bottom: 0;
  }
  p {
    font-size: 1.5rem;
    margin-top: 0;
    text-align: center;
  }
  a {
    font-size: 1.5rem;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
  }
</style>
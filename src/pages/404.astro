---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="404: Not Found">
  <main class="flex flex-col items-center justify-center py-20">
      <h1 class="text-4xl">Page Not Found.</h1>
      <p class="text-2xl text-center">Sorry, the page you were looking for is not found!</p>
      <a href="/" class="text-2xl mt-4 px-4 py-2 text-blue-600 hover:underline">Go back to the homepage</a>
  </main>
</BaseLayout>

---
import { Spotlight } from "@components/Spotlight";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="404: Not Found">
  <Spotlight
    className="-top-0 left-00 md:left-60 md:-top-20"
    fill="white"
    client:load
  />
  <main class="py-32 px-6 flex flex-col items-center justify-center">
      <h1 class="font-display text-5xl text-gray-400">Page Not Found.</h1>
      <h4 class="mt-4 text-2xl text-center">Sorry, the page you were looking for is not found!</h4>
      <a href="/" class="text-2xl mt-4 px-4 py-2 text-blue-600 hover:underline">Go back to the homepage</a>
  </main>
</BaseLayout>

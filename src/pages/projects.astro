---
import Accent from "@components/Accent.astro";
import PostEntryItem from "@components/ProjectEntryItem.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import { getProjectCollection } from "utils/content";
import { getTitle } from "utils/title";

const allProject = await getProjectCollection();
---

<BaseLayout title={getTitle('Projects')}>
  <main>
    <div class='layout py-12'>
      <h2 class='text-3xl md:text-4xl'>
          <Accent text='Projects.'/>
      </h2>
      <p class='mt-2 text-black-600'>
        Things I've created.
        These projects reflect my curiosity and eagerness to explore new things. 
        Please note that some projects from my professional work cannot be shared due to confidentiality reasons. 
      </p>
      <ul class='mt-6 grid gap-4 sm:grid-cols-2 xl:grid-cols-3'>
        {allProject.map((projects) => <PostEntryItem {...projects} />)}
      </ul>
    </div>
  </main>
</BaseLayout>

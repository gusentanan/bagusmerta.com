---
import BaseLayout from "@layouts/BaseLayout.astro";
// import LatestPosts from "@components/LatestPosts.astro";
import { getTitle } from "utils/title";
---

<BaseLayout title={getTitle("Home")}>
  <main>
    <div>
      <div class="intro">
        <h2>👋🏻 Hi! I'm a software engineer from Indonesia who's passionate about 
          <span class="inverted">Mobile</span>
          and 
          <span class="inverted">Front-end</span>
          development.
        </h2>
        <a class="link" href={"/about"}>More about me →</a>
      </div>
    </div>

  </main>
</BaseLayout>

<style>
  main > div:first-of-type {
    width: 100%;
    min-height: calc(var(--screen-height) * 0.5);
    display: flex;
    gap: 3rem;
    flex-wrap: wrap-reverse;

    /* center the row */
    justify-content: center;
    align-items: center;

    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  .intro {
    flex: 1;
    min-width: min(400px, 100%);
  }

  img {
    width: 250px;
    object-fit: contain;
    border-radius: 50%;
    margin: 0 auto;
  }
  h2 {
    line-height: 150%;
  }
  a {
    font-weight: 600;
  }
</style>
---
import BlogEntryItem from "@components/BlogEntryItem.astro";
import ProjectEntryItem from "@components/ProjectEntryItem.astro";
import Accent from "@components/Accent.astro";
import CustomLink from "@components/CustomLink.astro";
import Button from "@components/Button.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import { getBlogCollection, getBookMarkCollection, getProjectCollection } from "utils/content";
import { getTitle } from "utils/title";
import { Icon } from "astro-icon/components"
import BookmarkEntryItem from "@components/BookmarkEntryItem.astro";
import TopLeftGradient from "@components/gradient/TopLeftGradient.astro";
import BottomRightGradient from "@components/gradient/BottomRightGradient.astro";


const allBlogPosts = await getBlogCollection();
const allProject = await getProjectCollection();
const allBookmark = await getBookMarkCollection();

---

<BaseLayout title={getTitle('Home')}>
  <main>
    <section class='relative isolate min-h-main -mt-20 mb-20 flex flex-col justify-center'>
      <article class='layout'>
          <h1 class='mt-4 text-3xl md:text-4xl 2xl:text-5xl'>
            üëãüèª 
            <span class="inline-flex flex-col h-[calc(theme(fontSize.3xl)*theme(lineHeight.tight))] md:h-[calc(theme(fontSize.4xl)*theme(lineHeight.tight))] overflow-hidden">
              <ul class="block animate-text-slide text-left [&_li]:block">
                <li>Hello!</li>
                <li>Halo</li>
                <li>Ciao</li>
                <li>Namaste</li>
                <li>„Åì„Çì„Å´„Å°„ÅØ</li>
                <li>ŒìŒµŒπŒ¨ œÉŒøœÖ</li>
                <li aria-hidden="true">Hello!</li>
              </ul>
            </span>
          </h1>
          
          <h2 class='mt-4 text-xl md:text-4xl 2xl:text-5xl'>  
            you can call me 
            <Accent text='Bagus'/> 
          </h2>
          <p class='mt-4 text-l text-gray-700 md:text-3xl 2xl:text-4xl'>I'm a software engineer from Indonesia who's passionate about 
            <span class='inline-flex items-center underline decoration-black'>
              Mobile
            </span>
            and 
            <span class='inline-flex items-center underline decoration-black'>
              Front-end
            </span>
            development.
          </p>
          <div class='mt-4 flex flex-wrap gap-4 gap-y-2 md:mt-4'>
            <a 
              class:list={[
                'inline-flex items-center gap-1 text-md font-normal md:text-base',
                'cursor-newtab'
              ]}
              target='_blank'
              href='https://github.com/gusentanan'>
                <Icon name='ri:github-fill'/>
                <h4>
                  <CustomLink text='gusentanan' />
                </h4>
            </a>
            <a 
              class:list={[
                'inline-flex items-center gap-1 text-md font-normal md:text-base',
                'cursor-newtab'
              ]}
              target='_blank'
              href='https://linkedin.com/in/bagusmerta'>
                <Icon name='ri:linkedin-box-fill'/>
                <h4>
                  <CustomLink text='bagusmerta' />
                </h4>
            </a>
            <a 
              class:list={[
                'inline-flex items-center gap-1 text-md font-normal md:text-base',
                'cursor-newtab'
              ]}
              target='_blank'
              href='https://twitter.com/@bagusmertasntn'>
                <Icon name='ri:twitter-x-fill'/>
                <h4>
                  <CustomLink text='@bagusmertasntn' />
                </h4>
            </a>
          </div>
          <div class='mt-8 flex flex-wrap gap-4 md:!text-lg'>
              <Button textButton='More about me ‚Üí' link={"/about/"} />
              <a class:list={[
                 'mt-4 inline-flex rounded px-4 py-2',
                'bg-gray-100 shadow-sm hover:shadow-lg hover:border border-black',
                'scale-100 hover:scale-[1.03] active:scale-[0.97] motion-safe:transform-gpu',
                'motion-reduce:hover:scale-100 motion-reduce:hover:brightness-90',
                'transition duration-100',
              ]} href="/blog/">
                Read blog ‚Üí
              </a>
            
          </div>
      </article>

     <TopLeftGradient />

      <a 
        href='#intro' 
        class:list={[
          'absolute bottom-2 left-1/2 -translate-x-1/2 md:bottom-10',
          'cursor-pointer rounded-md transition-colors',
          'hover:text-primary-300 focus-visible:text-primary-300'
        ]}
      >
          <Icon class='h-8 w-8 animate-bounce md:h-10 md:w-10',
            name='material-symbols:arrow-downward-rounded' />

      </a>
      
    </section>

    <section class='relative isolate py-20' id='intro'>
      <article class='layout flex flex-col-reverse items-center md:flex-row md:justify-start'>
        <div class='mt-8 h-full w-full md:mt-0'>
            <h2 class='text-2xl md:text-4xl'>
              List of <Accent text='Blog'/> and Short Articles
            </h2>
            <p class='mt-2 text-base text-gray-800 md:text-lg'>
              A collection of my writings inspired by many different authors, mostly taken from my personal notes. 
              It features my detailed reflections on 
              <span class='inline-flex underline decoration-black'>
                programming
              </span>
              and 
              <span class='inline-flex underline decoration-black'>
                personal growth
              </span>
              , thoughtfully organized in chronological order for easier reading.
            </p>

            <Button textButton='See More Articles ‚Üí' link={"/blog/"} />

        </div>  
        <div class='h-full w-full'>
          <ul class='relative h-full'>
            {[allBlogPosts.slice(0, 1).map(blog => <BlogEntryItem {...blog} />)]}
          </ul>
        </div>
      </article>

     <BottomRightGradient />
      
    </section>
    
    <section class='py-20'>
      <article class='layout'>
          <h2 class='text-2xl md:text-4xl'>
            Personal <Accent text='Projects'/>
          </h2>
          <p class='mt-2 text-base text-gray-800 md:text-lg'>
            Here are some projects I've created. They were often built out of my curiosity and to explore what‚Äôs possible with code.
          </p>
        
        <ul class='mt-4 grid gap-4 sm:grid-cols-2 xl:grid-cols-3'>
          {[allProject.slice(0, 3).map(project => <ProjectEntryItem {...project} />)]}
        </ul>
        
        <Button textButton='See More Projects ‚Üí' link={"/projects/"} />
       
      </article>
    </section>

    

    <section class='relative isolate py-20'>
      <article class='layout flex flex-col-reverse items-center md:flex-row md:justify-start'>
        <div class='py-4 px-2 h-full w-full'>
          <h2 class='text-2xl md:text-3xl 2xl:text-3xl'>
            My
            <Accent text='Bookmarks'/>
          </h2>
          <p class='mt-2 text-base text-gray-800 md:text-lg'>
            A collection of what I've been reading, gathered from various articles and blogs.          </p>
          <Button textButton='See More Bookmark ‚Üí' link={"/bookmarks/"} />
        </div>
        <div class='w-full h-full'>
          <ul class='relative w-full h-full'>
            {[allBookmark.slice(0, 1).map(item => <BookmarkEntryItem {...item} />)]}
          </ul>
        </div>
      </article>

       <BottomRightGradient />
      
    </section>

    <section class='relative isolate py-20'>
      <article class='layout'>
        <h1 class='text-2xl md:text-3xl 2xl:text-3xl'>
          <Accent text='Interested in what you see?'/>
          <br> Let's connect!
        </h1>
        <p class='text-xl text-gray-700 md:text-2xl 2xl:text-3xl'>
          I'm always open to new opportunities and collaborations. If you have any questions or need assistance with a project,
          <a class='inline-flex items-center gap-2' href="mailto:merta.bagus24@gmail.com">
            <CustomLink text='feel free to reach out via email'/>
            <Icon name='ri:mail-fill'/>
          </a>
        </p>
      </article>
    </section>  
    
  </main>
</BaseLayout>

{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@lib/*": ["lib/*"]
    },
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "types": ["node"]
  },
  "exclude": ["node_modules/*"]
}